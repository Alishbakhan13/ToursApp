//header
header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
     if (user)
      a(href='#' class='nav__el nav__el--logout') Log Out
      a(href='/account' class='nav__el')
       img(src=`/img/users/${user.photo}` alt=`${user.name}` class='nav__user-img')
       span=user.name
     else
      a.nav__el(href="/login") Login 
      a.nav__el(href="#") Sign Up


     
  
